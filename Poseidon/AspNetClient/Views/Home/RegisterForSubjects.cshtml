@model RegisterForSubjectsViewModel

@using Interfaces;
@{
    ViewData["Title"] = "Tárgyfelvétel";
    
}
<div>
    <h2>@ViewData["Title"]</h2>
    <div class="col-lg-4 col-md-4  col-sm-4  "></div>
    <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 stylish-input-group centered">
        @if (@ViewBag.SearchedSubjectName != "")
        {
            <input id="searchedSubjectName" onkeyup="searchSubjects()" type="text" class="form-control" placeholder="Search" value=@ViewBag.SearchedSubjectName>
           
        }
        else
        {
            <input id="searchedSubjectName" onkeyup="searchSubjects()" type="text" class="form-control" placeholder="Search">
        }
    </div><div class="col-lg-4 col-md-4  col-sm-4  "></div>
    <br />
        <table id="subjectTable" class="table">
            <thead>
                <tr>
                    <th>Tárgynév</th>
                    <th>Kredit</th>
                    <th>Ajánlott félév</th>
                    <th>Tárgykód</th>
                    <th>Tárgyfelelős</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.Subjects)
                 {
                            <tr>
                                <td>@i.Name</td>
                                <td>@i.Credit</td>
                                <td>@i.RecommendedSemester</td>
                                <td>@i.Code</td>
                                <td>@i.ResponsibleProfessor</td>
                                <td><button>Felvétel</button></td>
                            </tr>
                }
            </tbody>
        </table>
</div>

<script>
    function searchSubjects() {
        var input, filter, table, tr, td, i;
        input = document.getElementById("searchedSubjectName");
        filter = input.value.toUpperCase();
        table = document.getElementById("subjectTable");
        tr = table.getElementsByTagName("tr");

        // Loop through all table rows, and hide those who don't match the search query
        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[0];
            if (td) {
                if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }
</script>

