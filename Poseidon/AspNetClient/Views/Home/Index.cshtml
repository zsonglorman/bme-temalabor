@model HomeViewModel

@{
    ViewData["Title"] = "Kezdőlap";
}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="text-center display-3">Poseidon</h1>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6 border-right">
            <h1 class="col-xs-4">Félévek</h1>
            <div class="col-xs-8 text-right">
                <ul class="pagination">
                    <li is-active-route asp-controller="Home" asp-action="Index" asp-route-id="1"><a asp-action="Index" asp-route-id="1">1</a></li>
                    <li is-active-route asp-controller="Home" asp-action="Index" asp-route-id="2"><a asp-action="Index" asp-route-id="2">2</a></li>
                    <li is-active-route asp-controller="Home" asp-action="Index" asp-route-id="3"><a asp-action="Index" asp-route-id="3">3</a></li>
                    <li is-active-route asp-controller="Home" asp-action="Index" asp-route-id="4"><a asp-action="Index" asp-route-id="4">4</a></li>
                    <li is-active-route asp-controller="Home" asp-action="Index" asp-route-id="5"><a asp-action="Index" asp-route-id="5">5</a></li>
                    <li is-active-route asp-controller="Home" asp-action="Index" asp-route-id="6"><a asp-action="Index" asp-route-id="6">6</a></li>
                    <li is-active-route asp-controller="Home" asp-action="Index" asp-route-id="7"><a asp-action="Index" asp-route-id="7">7</a></li>
                </ul>
            </div>
            <div class="col-md-12 table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Tárgynév</th>
                            <th>Kredit</th>
                            <th>Aláírás</th>
                            <th>Érdemjegy</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.SubjectWithGrade != null)
                        {
                            @foreach (var i in Model.SubjectWithGrade)
                            {
                                <tr>
                                    <td>@i.Subject.Name</td>
                                    <td>@i.Subject.Credit</td>
                                    <td>@i.Grade.Signature</td>
                                    <td>@i.Grade.ReceivedGrade</td>
                                    <!--<td class="text-center"><a asp-action="Edit" asp-controller="Home" asp-route-id="@i.Subject.Id" class="btn btn-sm btn-success">Módosítás</a></td>-->
                                    <td class="text-center"><a onclick="getPartialView(@i.Subject.Id)" class="btn btn-sm btn-success">Módosítás</a></td>
                                
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-6">
            <h1>Diagrammok</h1>
        </div>
    </div>
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h2 class="modal-title">Módosítás</h2>
                </div>
                <div id="SubjectModify">
                </div>
                <div class="modal-footer text-center">
                    <button type="button" class="btn btn-default" data-dismiss="modal" onclick="Submit()">Módosítás</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Törlés</button>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts{
    <script>
        function getPartialView(id){
            var url = "@Html.Raw(Url.Action("Modify", "Subjects", new { }))";
            url = url.concat("/" + id);
            $.ajax({
                url: url,
                type: "GET",
                cache: false,
                success: function(result){
                    $("#SubjectModify").html(result)
                }
            });
            $("#myModal").modal();
        }
    </script>
}