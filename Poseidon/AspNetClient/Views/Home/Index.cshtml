@model HomeViewModel

@{
    ViewData["Title"] = "Kezdőlap";
}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="text-center display-3">Poseidon</h1>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6 border-right">
            <h1 class="col-xs-4">Félévek</h1>
            <div class="col-xs-8 text-right">
                <ul class="pagination">
                    @if ((Model.Grades.Count / 10) > 1)
                    {
                        @for (var i = 1; i < (Model.Grades.Count / 10); i++)
                        {
                            <li is-active-route asp-controller="Home" asp-action="Index" asp-route-id=i><a asp-action="Index" asp-route-id=i>i</a></li>
                        }
                    }
                </ul>
            </div>
            <div class="col-md-12 table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Tárgynév</th>
                            <th>Kredit</th>
                            <th>Aláírás</th>
                            <th>Érdemjegy</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model.Grades)
                        {
                            <tr>
                                <td>@i.SubjectID</td>
                                <td>-</td>
                                <td>@i.Signature</td>
                                <td>@i.ReceivedGrade</td>
                                <td class="text-center"><a asp-action="Edit" asp-controller="Home" asp-route-id="@i.SubjectID" class="btn btn-sm btn-success">Módosítás</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-6">
            <h1>Diagrammok</h1>
        </div>
    </div>
</div>